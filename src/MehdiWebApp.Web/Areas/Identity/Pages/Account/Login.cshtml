@page
@model LoginModel

@{
    ViewData["Title"] = "ورود به سامانه";
}

<div class="container h-100">
    <div class="row align-items-center h-100">
        <div class="card font-weight-bold mw500 mx-auto">
            <div class="card-header text-center">سامانه اطلاعات</div>
            <div class="card-body pb-0">
                <form id="account" method="post" autocomplete="off">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <span class="fas fa-user"></span>
                        <label asp-for="Input.Email"></label> <span asp-validation-for="Input.Email" class="text-danger"></span>
                        <input asp-for="Input.Email" class="form-control" dir="ltr" />
                    </div>
                    <div class="form-group">
                        <span class="fas fa-key"></span>
                        <label asp-for="Input.Password"></label> <span asp-validation-for="Input.Password" class="text-danger"></span>
                        <input asp-for="Input.Password" class="form-control" dir="ltr" />
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary w-100">ورود به سامانه</button>
                    </div>

                    @*<div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>*@
                </form>
            </div>
            <div class="card-footer small">
                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl"><span class="fas fa-user-plus"></span> ثبت نام در سامانه</a>
                <a id="forgot-password" asp-page="./ForgotPassword"><span class="fas fa-unlock mr-4"></span> نام کاربری/رمز عبور را فراموش کرده ام</a>
            </div>
        </div>
    </div>
</div>