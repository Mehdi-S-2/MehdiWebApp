@using Microsoft.AspNetCore.Identity
@using MehdiWebApp.Infrastructure.Identity

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <li>
        <a id="manage" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Manage @UserManager.GetUserName(User) Account</a>
    </li>
    <li>
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home")">
            <button id="logout" type="submit" class="btn btn-link">Logout</button>
        </form>
    </li>
}
else
{
    <li>
        <a id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}